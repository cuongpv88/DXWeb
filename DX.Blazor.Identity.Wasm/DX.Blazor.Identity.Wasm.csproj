<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
	  <Version>21.2.8.15</Version>
	  <FileVersion>21.2.8.15</FileVersion>
	  <Authors>Don Wibier (DevExpress)</Authors>
	  <Description>Identity helper and configuration for Blazor WASM token based authorization</Description>
	  <Copyright>Copyright (c) 2022 Don Wibier</Copyright>
	  <TargetFramework>net6.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
  </PropertyGroup>
	<PropertyGroup>
		<PackageReleaseNotes>
			21.2.8.18: New helper package for DX.Blazor.Identity with everything for Blazor WASM to easily implement Identity with XPO on Blazor
		</PackageReleaseNotes>
		<RepositoryUrl>https://github.com/donwibier/DXWeb</RepositoryUrl>
	</PropertyGroup>

   <ItemGroup>
    <SupportedPlatform Include="browser" />
  </ItemGroup>

  <ItemGroup>
	  <PackageReference Include="Microsoft.AspNetCore.Components.Authorization" Version="6.0.6" />
	  <PackageReference Include="System.IdentityModel.Tokens.Jwt" Version="6.19.0" />
	  <PackageReference Include="Microsoft.AspNetCore.Components.Web" Version="6.0.4" />
	  <PackageReference Include="Blazored.LocalStorage" Version="4.2.0" />
	  <PackageReference Include="Toolbelt.Blazor.HttpClientInterceptor" Version="10.1.0" />
	  
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\DX.Blazor.Identity\DX.Blazor.Identity.csproj" />
  </ItemGroup>

</Project>
